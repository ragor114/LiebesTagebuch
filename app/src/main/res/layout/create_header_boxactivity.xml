<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="15dp"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/new_header_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="@string/hint_new_header"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:id="@+id/button_finish_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_round_corners"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_margin="5dp"/>

    </LinearLayout>

</RelativeLayout>