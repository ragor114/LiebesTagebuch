<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/new_picture_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/beispiel_png"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/button_choose_from_gallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:layout_margin="5dp"
                android:text="@string/choose_picture_button_text"
                android:textSize="17sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button_take_with_camera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:layout_margin="5dp"
                android:text="@string/take_picture_button_text"
                android:textSize="17sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_finish_picture_box"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:layout_margin="5dp"
            android:src="@drawable/ic_check_black_24dp"/>

    </LinearLayout>

</RelativeLayout>